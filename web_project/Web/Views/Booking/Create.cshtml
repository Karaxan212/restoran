@model Web.Entities.Booking

<h2>Создать бронирование</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label for="ID_user">Пользователь</label>
        <input type="text" asp-for="ID_user" class="form-control" required />
    </div>

    <div class="form-group">
        <label for="ID_table">Выберите стол(ы)</label>
        <select asp-for="SelectedTableIds" class="form-control" multiple>
            @foreach (var table in ViewBag.Tables)
            {
                <option value="@table.ID_table">Столик №@table.Number</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label for="Date">Дата бронирования</label>
        <input type="datetime-local" asp-for="Date" class="form-control" required />
    </div>

    <div class="form-group">
        <label for="Status">Статус</label>
        <select asp-for="Status" class="form-control">
            <option value="Confirmed">Подтверждено</option>
            <option value="Cancelled">Отменено</option>
        </select>
    </div>

    <button type="submit" class="btn btn-success">Создать</button>
</form>