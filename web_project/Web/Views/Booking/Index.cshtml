@model List<Web.Entities.Booking>

<h2>Список бронирований</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Добавить бронирование</a>
</p>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID бронирования</th>
            <th>Столик</th>
            <th>Дата</th>
            <th>Статус</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var booking in Model)
        {
            <tr>
                <td>@booking.Id</td>
                <td>
                    @if (booking.Table != null)
                    {
                        <span>Столик №@booking.Table.Number</span>
                    }
                    else
                    {
                        <span>Нет данных</span>
                    }
                </td>
                <td>@booking.Date.ToString("dd.MM.yyyy HH:mm")</td>
                <td>@booking.Status</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@booking.Id" class="btn btn-warning">Редактировать</a>
                    <a asp-action="Delete" asp-route-id="@booking.Id" class="btn btn-danger">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>