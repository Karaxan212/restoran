@model Web.Entities.Table

@{
    ViewData["Title"] = "Удалить стол";
}

<h2>Удалить стол</h2>

<p>Вы уверены, что хотите удалить этот стол?</p>

<div>
    <p><strong>Номер:</strong> @Model.Number</p>
    <p><strong>Количество мест:</strong> @Model.SeatsCount</p>
    <p><strong>Тип:</strong> @Model.Type</p>
    <p><strong>Статус:</strong> @Model.Status</p>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Удалить</button>
    <a asp-action="Index" class="btn btn-secondary">Отмена</a>
</form>
