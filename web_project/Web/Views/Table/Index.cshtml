@model IEnumerable<Domain.Entities.Table>

<h2>Список столов</h2>
<a asp-action="Create" class="btn btn-primary">Добавить стол</a>
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Номер</th>
            <th>Количество мест</th>
            <th>Тип</th>
            <th>Статус</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ID_table</td>
                <td>@item.Number</td>
                <td>@item.Seats_count</td>
                <td>@item.Type</td>
                <td>@item.Status</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ID_table" class="btn btn-warning">Редактировать</a>
                    <a asp-action="Details" asp-route-id="@item.ID_table" class="btn btn-info">Подробнее</a>
                    <a asp-action="Delete" asp-route-id="@item.ID_table" class="btn btn-danger">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>
